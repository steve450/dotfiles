[user]
	# Name used in commit messages.
	name = Steve Carlucci 
	# Email used in commit messages.
	email = steve@barkly.com
[shell]
	# Default SSH username.
	username = steve
[github]
	# GitHub username for command-line tools.
	user = steve450
[alias]
	# Push the current branch upstream to steve450 using the same
	# branch name for the remote branch.
	um = !(git remote -v | grep -q steve450 || hub fork) \
	    && git push --set-upstream steve450 $(git current-branch)
